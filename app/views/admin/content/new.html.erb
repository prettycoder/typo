<% @page_heading = _('New article') %>

<%= render "admin/shared/edit", { :form_type => "article", :form_action => { :action => "new", :id => @article.id , :class => ('autosave')} } %>

<% if current_user.admin? %>
  <h4><%= _("Merge Articles") %></h4>
  <%= form_tag(action: "merge", :id => "merge_form") do %>
    <%= hidden_field_tag(:id, "#{@article.id}") %>
    <%= label_tag(:merge_this, "Article ID ") %>
    <%= text_field_tag(:merge_this) %>
    <br />
    <%= submit_tag("Merge") %>
  <% end %>
<% end %>
